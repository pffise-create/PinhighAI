{
  "swagger": "2.0",
  "info": {
    "title": "Pin High Coaching Chat API",
    "description": "Context-aware coaching conversation API for Pin High golf coaching platform",
    "version": "1.0.0"
  },
  "host": "api.pinhigh.golf",
  "schemes": ["https"],
  "basePath": "/v1",
  "produces": ["application/json"],
  "paths": {
    "/chat/coaching": {
      "post": {
        "summary": "Start or continue a coaching conversation",
        "description": "Provides context-aware coaching responses with conversation continuity",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "coaching_request",
            "description": "Coaching conversation request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CoachingRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful coaching response",
            "schema": {
              "$ref": "#/definitions/CoachingResponse"
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:us-east-1:lambda:path/2015-03-31/functions/arn:aws:lambda:us-east-1:458252603969:function:golf-coaching-chat/invocations",
          "passthroughBehavior": "when_no_match",
          "contentHandling": "CONVERT_TO_TEXT"
        }
      },
      "options": {
        "summary": "CORS preflight request",
        "responses": {
          "200": {
            "description": "CORS headers",
            "headers": {
              "Access-Control-Allow-Origin": {
                "type": "string"
              },
              "Access-Control-Allow-Methods": {
                "type": "string"
              },
              "Access-Control-Allow-Headers": {
                "type": "string"
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "mock",
          "requestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          },
          "responses": {
            "default": {
              "statusCode": "200",
              "responseParameters": {
                "method.response.header.Access-Control-Allow-Origin": "'*'",
                "method.response.header.Access-Control-Allow-Methods": "'OPTIONS,POST'",
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "CoachingRequest": {
      "type": "object",
      "required": ["message", "userId"],
      "properties": {
        "message": {
          "type": "string",
          "maxLength": 1000,
          "description": "User's coaching question or message"
        },
        "userId": {
          "type": "string",
          "description": "Unique identifier for the user"
        },
        "messageType": {
          "type": "string",
          "enum": ["general_coaching", "swing_discussion", "follow_up"],
          "description": "Type of coaching conversation"
        },
        "jobId": {
          "type": "string",
          "description": "Reference to specific swing analysis (optional)"
        },
        "coachingContext": {
          "type": "object",
          "description": "Existing coaching context from mobile app",
          "properties": {
            "sessionMetadata": {
              "type": "object"
            },
            "coachingThemes": {
              "type": "object"
            },
            "recentConversations": {
              "type": "array"
            }
          }
        },
        "conversationHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": ["user", "assistant"]
              },
              "content": {
                "type": "string"
              }
            }
          },
          "maxItems": 20,
          "description": "Recent conversation messages for context"
        }
      }
    },
    "CoachingResponse": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string",
          "description": "AI coaching response text"
        },
        "tokensUsed": {
          "type": "integer",
          "description": "Number of tokens consumed"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Response timestamp"
        },
        "success": {
          "type": "boolean",
          "description": "Response success indicator"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "success": {
          "type": "boolean",
          "description": "Always false for errors"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Error timestamp"
        }
      }
    }
  },
  "x-amazon-apigateway-request-validators": {
    "basic": {
      "validateRequestBody": true,
      "validateRequestParameters": true
    }
  },
  "x-amazon-apigateway-request-validator": "basic"
}